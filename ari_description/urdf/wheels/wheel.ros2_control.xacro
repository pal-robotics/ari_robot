<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="ros2_control_wheel" params="side">
    <joint name="wheel_${side}_joint">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position" />
    </joint>

    <xacro:include filename="$(find ari_description)/ros2_control/transmissions.urdf.xacro" />
    <xacro:ari_simple_transmission name="wheel_${side}" />

  </xacro:macro>

</robot>
